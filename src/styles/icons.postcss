.tags {
    @apply flex gap-3;
    @apply flex-wrap;
    @apply duration-300;
}

.skill-tag {
    @apply flex items-center gap-2;
    @apply py-1 px-3 rounded-md;
    @apply text-sm font-medium;
    @apply dark:text-stone-400 hover:text-white dark:hover:text-red-200;
    @apply dark:bg-stone-900/40 bg-stone-200;
    @apply outline;
    @apply cursor-pointer;
    @apply duration-200;
}

.skill-tag.django {
    @apply hover:bg-green-300 hover:text-green-900;
    @apply dark:hover:outline-green-700 dark:hover:bg-green-900 dark:hover:text-green-200;
}

.skill-tag.python {
    @apply hover:bg-orange-300 hover:text-orange-950;
    @apply dark:hover:outline-orange-700 dark:hover:bg-orange-900 dark:hover:text-orange-200;
}

